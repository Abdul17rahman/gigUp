<div class="jobs-container">
  <ul>
    <% for (const job of availableJobs) { %>
    <li>
      <div class="job d-flex flex-column justify-content-between">
        <p class="text-primary"><%= job.status.toUpperCase() %></p>
        <div>
          <h5><%= job.title %></h5>
          <i class="bi bi-layers"></i> <%= job.employer.company %>
          <i class="bi bi-geo-alt-fill"></i> <%= job.location %>
          <i class="bi bi-person-fill"></i> <%= job.numOfPos %>
        </div>
        <div class="d-flex justify-content-end mt-auto">
          <a href="/jobs/<%= job._id %>" class="btn btn-primary">View</a>
        </div>
      </div>
    </li>
    <% } %>
  </ul>
</div>