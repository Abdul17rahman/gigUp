<div class="jobs-container">
  <ul>
    <% for (const job of availableJobs) { %>
    <li>
      <div class="job d-flex flex-column justify-content-between">
        <p class="text-primary"><%= job.status.toUpperCase() %></p>
        <div>
          <h5><%= job.title %></h5>
          <i class="bi bi-layers"></i> <%= job.employer.company %>
          <i class="bi bi-geo-alt-fill"></i> <%= job.location %>
          <i class="bi bi-person-fill"></i> <%= job.numOfPos %>
        </div>
        <div class="d-flex justify-content-end mt-auto">
          <a href="/jobs/<%= job._id %>" class="btn btn-primary">View</a>
        </div>
      </div>
    </li>
    <% } %>
  </ul>
  <nav aria-label="Page navigation example">
    <ul class="pagination">
      <% if (current > 1){ %>
      <li class="page-item">
        <a class="page-link" href="/jobs?page=<%= current - 1 %>&limit=<%= limit %>" aria-label="Previous">
          <span aria-hidden="true">&laquo;</span>
        </a>
      </li>
      <% } %>

      <% for (let i = 1; i <= totalPages; i++){ %>
      <li class="page-item <%= current === i ? 'active' : '' %>"><a class="page-link" href="/jobs?page=<%= i %>&limit=<%= limit %>"><%= i %></a></li>

      <% } %>

      <% if (current < totalPages) {%>
      <li class="page-item">
        <a class="page-link" href="/jobs?page=<%= current + 1 %>&limit=<%= limit %>" aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
        </a>
      </li>

      <% } %>
    </ul>
  </nav>
</div>